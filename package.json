{
  "name": "vault-app",
  "version": "1.0.0",
  "private": "true",
  "workspaces": [
    "src/frontend",
    "src/backend",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "sync-lockfile:backend": "pnpm install --filter backend --lockfile-only && mv pnpm-lock.yaml src/backend/"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.5.0",
    "prettier": "^3.8.1",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.15.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@heroui/shared-utils",
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@tailwindcss/oxide",
      "bcrypt",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}
